<%- include("partials/header") %>


<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4">Campgrounds Page</h1>
            <p>View our hand-picked camp grounds from all over the world!</p>
            <p>
              <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </div>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-md-3 col-sm-6 card" style="width: 18rem;">
                <div class="thumbnail">
                    <img src="<%= campground.image %>" class="card-img-top">
                    <div class="caption card-body">
                        <h4 class="card-text"><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>


<%- include("partials/footer") %>